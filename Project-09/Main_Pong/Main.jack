class Main {

    function void main() {
        var Paddle paddle;
        var Ball ball;

        do Screen.clearScreen();

        let paddle = Paddle.new();
        let ball = Ball.new();

        while (true) {
            do paddle.move();
            do ball.move(paddle);
            do Sys.wait(5);   // controls speed
        }

        return;
    }
}
